<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="118dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textRank"
            android:layout_width="@dimen/rank_element_width"
            android:layout_height="@dimen/rank_element_height"
            android:layout_margin="@dimen/margin"
            android:gravity="center"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/artView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/art_view_margin_start"
            android:layout_marginTop="@dimen/margin"
            app:srcCompat="@android:mipmap/sym_def_app_icon"
            tools:ignore="ContentDescription" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="163dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/botText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/bot_text_margin_top"
            android:gravity="center"
            android:text="@string/down_text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/topText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:gravity="center"
            android:text="@string/top_text"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="125dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/detailView"
            android:layout_width="@dimen/detail_view_width"
            android:layout_height="@dimen/detail_view_height"
            android:layout_gravity="center"
            app:srcCompat="@mipmap/ic_launcher"
            tools:ignore="ContentDescription" />

    </FrameLayout>

</LinearLayout>